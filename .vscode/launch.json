  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch CLI",
      "program": "${workspaceFolder}/apps/video-http-server/src/cli.ts",
      "outFiles": ["${workspaceFolder}/apps/video-http-server/lib/**/*.js"],
      "preLaunchTask": "tsc: build video-http-server",
      "env": {
        "VSCODE_BUGGER": "true"
      }
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:9000",
      "webRoot": "${workspaceFolder}/apps/front-end",
      "sourceMaps": true
    }
  ]
}
